<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F4F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome !"
            android:textSize="24sp"
            android:textColor="#003366"
            android:fontFamily="sans-serif-medium"/>

        <ImageView
            android:id="@+id/welcome_image"
            android:padding="0dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/welcome_illustration"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Links"
            android:textSize="20sp"
            android:textColor="#546E7A"
            android:layout_marginTop="24dp"/>

        <!-- Card for Activity Calendar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_activity_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Activity Calendar Icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity Calendar"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:textColor="#003366"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Progress Tracker -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_progress"
                    android:contentDescription="Progress Tracker Icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress Tracker"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:textColor="#003366"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Tips -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_tips"
                    android:contentDescription="Tips Icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parenting Tips"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:textColor="#003366"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
